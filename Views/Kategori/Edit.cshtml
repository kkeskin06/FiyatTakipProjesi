@model GoraYazilim.Entity.DtoKategori


<h2>Kategori Düzenleme</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" method="post" enctype="multipart/form-data" asp-controller="Kategori" asp-action="Update">


            <div class="form-group">

                <input asp-for="KategoriId" class="form-control" type="hidden" />

            </div>

            <div class="form-group">
                <label asp-for="KategoriAdi" class="control-label"></label>
                <input asp-for="KategoriAdi" class="form-control" />
                <span asp-validation-for="KategoriAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategoriBilgisi" class="control-label"></label>
                <input asp-for="KategoriBilgisi" class="form-control" />
                <span asp-validation-for="KategoriBilgisi" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <td><hr /><input type="submit" value="Güncellemeyi Kaydet" class="btn btn-primary" /></td>
            </div>
        </form>
    </div>
</div>
